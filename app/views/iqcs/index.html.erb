<h2>Listing IQC Materials</h2>

<table class="table table-bordered table-striped table-hover table-condensed">
<thead>
  <tr>
    <th>Material Name</th>
    <th>Manufacturer</th>
    <th>Notes</th>
    <th>Assigned or Calculated Values</th>
    <th>Date record created</th>
	<th>Code</th>
    <th>Lot Number</th>
    <th>Expiry Date</th>
	<th>Storage Location</th>
    <th>Storage Temperature</th>
    <th>Date in Use</th>
	<th>Date Reconstituted</th>
    <th>Number Of Aliquots</th>
    <th>Made Up By</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>

<tfoot>
    	<tr>
        	<td colspan="8" class="rounded-foot-left"><em>IQC Materials</em></td>
        	<td class="rounded-foot-right">&nbsp;</td>
        </tr>
</tfoot>


<% @iqc.each do |iqc| %>
<% unless iqc.expirydate.nil? %>
<% if iqc.expirydate.to_formatted_s(:long) > Date.today.to_formatted_s(:long) then%>
  <tr class='error'>
<%else%>
  <tr>
<%end%>
<%end%>
    <td><%= iqc.name %></td>
    <td><%= iqc.manufacturer %></td>
    <td><%= iqc.notes %></td>
    <td><%= iqc.assigned %></td>
    <td><%= iqc.created_at.to_formatted_s(:long) %></td>
    <td><%= iqc.code %></th>
    <td><%= iqc.lotno %></th>
	<td><% unless iqc.expirydate.nil? 
				iqc.expirydate.to_formatted_s(:long) 
		   end %> </td>
	<td><%= iqc.storagelocation %> </th>
    <td><%= iqc.storagetemp %> </th>
    <td><% 	unless iqc.expirydate.nil? 
	 			iqc.dateinuse.to_formatted_s(:long) 
			end %></th>
	<td><% 	unless iqc.expirydate.nil? 
				iqc.datereconstituted.to_formatted_s(:long) 
			end %></th>
    <td><%= iqc.numberofaliquots %></th>
    <td><% 	unless iqc.expirydate.nil? 
				User.find(iqc.users_id).email 
			end %></th>
    <td><%= link_to 'Show', iqc, :class => "btn btn-info btn-small" %></td>
    <td><%= link_to 'Edit', edit_iqc_path(iqc), :class => "btn btn-primary btn-small" %></td>
    <td><%= link_to 'Destroy', iqc, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-small" %></td>
  </tr>
<% end %>
</table>

