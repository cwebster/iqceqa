<h1>Listing Imported Filenames</h1>

<div id="articles">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
</br>
	<i class="icon-folder-open"></i>
	<% if @imported_files_by_date[date] %>
          <span class="badge badge-success">Imports</span>
    <% end %>
  <% end %>
</div>
<hr>

