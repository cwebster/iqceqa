<%= form_for(@eqa) do |f| %>
  <% if @eqa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@eqa.errors.count, "error") %> prohibited this eqa from being saved:</h2>

      <ul>
      <% @eqa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Test Name<br />
 <%= select("eqa", "test_code_id", TestCode.all.collect {|p| [ p.testExpansion, p.id ] }, {:include_blank => 'None'}) %>
  </div>
  <div class="field">
    <%= f.label :scheme %><br />
<%= select("eqa", "eqa_scheme_id", EqaScheme.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'None'}) %>
  </div>
  
  <div class="field">
    Analyser <br />
<%= select("eqa", "analyser_id", Analyser.all.collect {|p| [ p.AnalyserName, p.id ] }, {:include_blank => 'None'}) %>
  </div>
  
  <div class="field">
    <%= f.label "% BIAS" %><br />
    <%= f.text_field :bias %>
  </div>
  <div class="field">
    <%= f.label :dateOfEQA %><br />
    <%= f.date_select :dateOfEQA %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
